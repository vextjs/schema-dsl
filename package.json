  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/schemaio/schemaio.git"
  },
  "bugs": {
    "url": "https://github.com/schemaio/schemaio/issues"
  },
  "homepage": "https://github.com/schemaio/schemaio#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "eslint": "^8.57.1",
    "mocha": "^10.8.2",
    "monsqlize": "^1.0.1",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1"
  }
